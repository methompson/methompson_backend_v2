{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@vice_bank/*": [
        "./packages/vice_bank_submodule/src/*"
      ]
    },
  },
  "include": [
    "./src/**/*",
    "./packages/vice_bank_submodule/src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}